<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backimagesearch"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/welcomemessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search a room with your criteria"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/backroundblue3"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/area"
        android:background="@drawable/roundecorners"
        android:hint="Area"
        android:textColor="@color/electricblue"
        android:drawableLeft="@drawable/baseline_apartment_24"
        android:drawablePadding="10dp"
        android:textColorHint="@color/backroundblue3"
        android:padding="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startDate"
        android:background="@drawable/roundecorners"
        android:hint="Start Date (yyyy-mm-dd )"
        android:textColor="@color/electricblue"
        android:drawableLeft="@drawable/calendar_icon"
        android:drawablePadding="10dp"
        android:textColorHint="@color/backroundblue3"
        android:padding="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/endDate"
        android:background="@drawable/roundecorners"
        android:hint="End Date (yyyy-mm-dd)"
        android:textColor="@color/electricblue"
        android:drawableLeft="@drawable/calendar_icon"
        android:drawablePadding="10dp"
        android:textColorHint="@color/backroundblue3"
        android:padding="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stars"
        android:background="@drawable/roundecorners"
        android:hint="Stars"
        android:textColor="@color/electricblue"
        android:drawableLeft="@drawable/star_svgrepo_com"
        android:drawablePadding="10dp"
        android:textColorHint="@color/backroundblue3"
        android:padding="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:background="@drawable/roundecorners"
        android:hint="Price"
        android:textColor="@color/electricblue"
        android:drawableLeft="@drawable/dollar_circle_svgrepo_com"
        android:drawablePadding="10dp"
        android:textColorHint="@color/backroundblue3"
        android:padding="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guests"
        android:background="@drawable/roundecorners"
        android:hint="Guests"
        android:textColor="@color/electricblue"
        android:drawableLeft="@drawable/baseline_airline_seat_individual_suite_24"
        android:drawablePadding="10dp"
        android:textColorHint="@color/backroundblue3"
        android:padding="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Search"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/backroundblue3"
        />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/logomain1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="SSS"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        />

</LinearLayout>